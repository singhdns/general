<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/add_<%= Config_setup["Name"] %>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add item" 
            android:onClick="onClick"/>

        <Button
            android:id="@+id/delete_<%= Config_setup["Name"] %>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del" 
            android:onClick="onClick"/>

        <Button
            android:id="@+id/modify_<%= Config_setup["Name"] %>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mod" 
            android:onClick="onClick"/>  
                  
        <Button
            android:id="@+id/deleteTable_<%= Config_setup["Name"] %>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DelTbl" 
            android:onClick="onClick"/>        
 
        <Button
            android:id="@+id/createTable_<%= Config_setup["Name"] %>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NewTbl" 
            android:onClick="onClick"/>         
    </LinearLayout>
    <LinearLayout
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/exportTable_<%= Config_setup["Name"] %>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export" 
            android:onClick="onClick"/>         
        <Button
            android:id="@+id/exportTable_<%= Config_setup["Name"] %>_csv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExpCSV" 
            android:onClick="onClick"/>         
        <Button
            android:id="@+id/importTable_<%= Config_setup["Name"] %>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imprt" 
            android:onClick="onClick"/>         
        <Button
            android:id="@+id/shareTable_<%= Config_setup["Name"] %>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share" 
            android:onClick="onClick"/>         
        <Button
            android:id="@+id/shareTable_<%= Config_setup["Name"] %>_csv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShaCSV" 
            android:onClick="onClick"/>         
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

</LinearLayout> 
