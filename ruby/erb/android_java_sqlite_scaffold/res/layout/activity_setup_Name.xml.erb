<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Setup<%= Config_setup["Name"] %>Activity" >

<% field_counter = 0  %>
<% prev_field_id = "dummy_field_id"  %>
<% Config_setup["field"].each_key do |key| %>
<% field_id = "editText"+key  %>
<% if Config_setup["field"][key]["values"] %>
    <AutoCompleteTextView
<% else %>
    <EditText
<% end %>
        android:id="@+id/editText<%= key %>"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="<%= key%>"
<% if field_counter > 0 %>
        android:layout_below="@+id/<%= prev_field_id%>"
<% else %>
        android:layout_alignParentTop="true"
<% end %>
        android:ems="10"
<% if Config_setup["field"][key]["inputType"] %>
        android:inputType="<%= Config_setup["field"][key]["inputType"] %>"
<% end %>
    />
<% prev_field_id = field_id  %>
<% field_counter = field_counter + 1  %>
<% end %>

    <Button
        android:id="@+id/<%= Config_setup["Name"] %>_buttonSaveItemSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/<%= prev_field_id%>"
        android:layout_alignParentLeft="true"
        android:text="Save" />

    <Button
        android:id="@+id/<%= Config_setup["Name"] %>_buttonCancelItemSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/<%= prev_field_id%>"
        android:layout_toRightOf="@+id/<%= Config_setup["Name"] %>_buttonSaveItemSetup"
        android:text="Cancel" />

</RelativeLayout>
