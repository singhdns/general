<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editTextLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonDropTable"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="top|center_vertical"
        android:inputType="textMultiLine"
        android:textSize="9sp" />

    <Button
        android:id="@+id/buttonExecute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/Execute" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonExecute"
        android:layout_alignBottom="@+id/buttonExecute"
        android:layout_toRightOf="@+id/buttonExecute"
        android:text="@string/Clear" />

    <EditText
        android:id="@+id/editTextOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonClear"
        android:layout_alignBottom="@+id/buttonClear"
        android:layout_toRightOf="@+id/buttonClear"
        android:ems="10"
        android:hint="@string/Options" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextLog"
        android:layout_below="@+id/editTextOptions"
        android:text="@string/Add" />

    <Button
        android:id="@+id/buttonDropTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextLog"
        android:layout_alignRight="@+id/buttonShow"
        android:layout_below="@+id/buttonAdd"
        android:text="DeleteDb" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonDropTable"
        android:layout_toRightOf="@+id/buttonSave"
        android:text="@string/Upload" />

    <Button
        android:id="@+id/buttonShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonDropTable"
        android:layout_alignLeft="@+id/buttonClear"
        android:text="@string/Show" />

    <Button
        android:id="@+id/buttonManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonDropTable"
        android:layout_toRightOf="@+id/buttonDropTable"
        android:text="@string/Manage" />

    <Button
        android:id="@+id/buttonCancelUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonManage"
        android:layout_alignBottom="@+id/buttonManage"
        android:layout_toRightOf="@+id/buttonManage"
        android:text="Cancel" />

    <Button
        android:id="@+id/buttonManageErrors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonShow"
        android:layout_toRightOf="@+id/buttonClear"
        android:text="ManageErr" />

</RelativeLayout>