<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.first"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.first.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.first.fileBrowser"
            android:label="@string/app_name" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.first.fileBrowserRemote"
            android:label="@string/app_name" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.first.ExampleListActivity"
            android:label="@string/title_activity_example_list" >
        </activity>
        <activity
            android:name="com.example.first.SetupDirPairActivity"
            android:label="@string/title_activity_setup_dir_pair" >
        </activity>
        <activity
            android:name="com.example.first.ManageDatabaseActivity"
            android:label="@string/title_activity_manage_database" >
        </activity>
        <activity
            android:name="com.example.first.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.first.UserSettingActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.first.ManageErrorsActivity"
            android:label="@string/title_activity_manage_errors" >
        </activity>
    </application>

</manifest>
